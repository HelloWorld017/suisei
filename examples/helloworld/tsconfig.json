{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext", "node"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"],
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "suisei",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "suisei": ["../packages/suisei/src"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
