{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"],
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@suisei/*": ["packages/*/src"],
      "suisei": ["packages/suisei/src"]
    }
  },
  "exclude": [
    "node_modules",
    "packages/*/types/**",
    "packages/*/lib/**",
    "packages/*/esm/**"
  ]
}
